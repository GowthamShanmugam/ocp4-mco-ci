{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "outDir": "./dist"
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx"],
  "include": ["packages"]
}
